{
  "name": "domain-driven-hexagon",
  "version": "3.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "build:swc": "swc --ignore \"**/*.spec.ts\" --delete-dir-on-start --out-dir dist/src/ src/",
    "build:dev": "nest build ",
    "build:prod": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev-backup": "nest start --watch",
    "migrate": "npx prisma migrate dev",
    "start:local": "rimraf dist && nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:dev": "rimraf dist && nest build --webpack --webpackPath webpack-hmr.config.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "npx prisma db push && rimraf dist && nest build nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "lint": "gts lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "gts clean",
    "eslint": "eslint \"./src/**/*.ts\" && tsc --noemit",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "husky install",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@aws-sdk/client-s3": "^3.568.0",
    "@fastify/compress": "^7.0.3",
    "@fastify/csrf-protection": "^6.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.2.0",
    "@fastify/static": "^7.0.3",
    "@google-cloud/translate": "^8.2.0",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-fastify": "^10.3.8",
    "@nestjs/platform-socket.io": "^10.3.8",
    "@nestjs/swagger": "^7.3.1",
    "@prisma/client": "^5.13.0",
    "@prisma/extension-read-replicas": "^0.3.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.5.2",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "env-var": "^7.4.1",
    "fastify": "^4.26.2",
    "graphql": "^16.8.1",
    "jest-cucumber": "^4.2.0",
    "mime-types": "^2.1.35",
    "nanoid": "^5.0.7",
    "nestjs-console": "^9.0.0",
    "nestjs-request-context": "^3.0.0",
    "oxide.ts": "^1.1.0",
    "path": "^0.12.7",
    "prisma": "^5.13.0",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@swc/core": "^1.4.17",
    "@types/jest": "29.5.12",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.12.8",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "commitlint-config-git-commit-emoji": "^1.0.0",
    "dependency-cruiser": "^16.3.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "husky": "^9.0.11",
    "i": "^0.3.7",
    "jest": "29.7.0",
    "lint-staged": "^15.2.2",
    "npm": "^10.7.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "run-script-webpack-plugin": "^0.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-node-externals": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,css,scss,md}": [
      "npx prettier --write",
      "echo \"npm run lint --prefix webapp --fix\"",
      "eslint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
