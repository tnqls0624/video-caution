generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  admin
  moderator
  guest
}

model users {
  id         String    @id
  role       UserRoles
  email      String
  country    String
  postalCode String
  street     String
  token      String?
  provider   String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  removedAt  DateTime?

  @@index([provider, token])
}

model images {
  id        String    @id
  src       String
  hash      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  removedAt DateTime?

  @@index([hash])
}
